#!/bin/bash
#
# Runs a fake GCS at https://localhost:4443 and creates
# a storage bucket called `file-store`.

set -e

rm -rf tmp/
mkdir -p tmp/storage
mkdir -p tmp/data/file-store
echo "hello world" > tmp/data/file-store/example.txt

docker run \
  -v "$(pwd)/tmp/storage:/storage" \
  -v "$(pwd)/tmp/data:/data" \
  --name fake-gcs \
  --rm \
  -p 4443:4443 \
  fsouza/fake-gcs-server
